@model Localidades.Models.Region

@{
    ViewBag.Title = "Details";
}

<h2>Detalles</h2>

<div>
    <h3>Región</h3>
    <hr />


    <h4>@Html.DisplayFor(model => model.Nombre)</h4>


</div>

<div>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Provincias</th>
                <th scope="col">Cantidad de Municipios</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in ViewBag.Datos)
            {
                <tr>
                    <td>@r.Nombre</td>
                    <td>@r.NumeroMunicipios</td>
                </tr>
            }
        </tbody>
    </table>




</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
